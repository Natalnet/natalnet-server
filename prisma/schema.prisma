generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id String @id @unique
  name String
  email String
  password String
  avatar String?
  
  created_at DateTime
  updated_at DateTime

  project Project[]
  coordinators Coordinators[]
}

model Project {
  id String @id @unique
  name String
  description String

  created_at DateTime
  updated_at DateTime

  students User[]
  coordinators Coordinators[]
}

model Coordinators {
  id String @id @unique
  is_admin Boolean? @default(false)

  user User @relation(fields: [user_id], references: [id])
  user_id String

  projects Project @relation(fields: [project_id], references: [id])
  project_id String
}